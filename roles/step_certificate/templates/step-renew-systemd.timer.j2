[Unit]
Description=Timer for certificate renewal
Documentation=https://smallstep.com/docs/step-ca/certificate-authority-server-production
PartOf=cert-renewer.target

[Timer]
Persistent=true

; Calendar event expressions. See systemd.time(7) for more information.
OnCalendar={{ step_cert_renewal_service_interval }}

; Always run the timer on time.
AccuracySec=1us

; Add jitter to prevent a "thundering hurd" of simultaneous certificate renewals.
RandomizedDelaySec=5m

[Install]
WantedBy=timers.target
