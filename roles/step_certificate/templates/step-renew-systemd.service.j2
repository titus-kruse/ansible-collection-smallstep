[Unit]
Description=Certificate renewer
After=network-online.target
Documentation=https://smallstep.com/docs/step-ca/certificate-authority-server-production
StartLimitIntervalSec=0
PartOf=cert-renewer.target

[Service]
Type=oneshot
User=root

Environment=STEPPATH={{ step_cli_steppath }} \
            CERT_LOCATION={{ step_cert_certfile_full.path }} \
            KEY_LOCATION={{ step_cert_keyfile_full.path }}

; ExecCondition checks if the certificate is ready for renewal,
; based on the exit status of the command.
; (In systemd <242, you can use ExecStartPre= here.)
ExecCondition={{ _step_cli_executable_absolute.stdout }} certificate needs-renewal ${CERT_LOCATION}

; ExecStart renews the certificate, if ExecStartPre was successful.
ExecStart={{ _step_cli_executable_absolute.stdout }} ca renew --force{% if step_cert_renewal_when is defined %} --expires-in {{ step_cert_renewal_when }}{% endif %} ${CERT_LOCATION} ${KEY_LOCATION}

; Try to reload or restart the systemd service that relies on this cert-renewer
; If the relying service doesn't exist, forge ahead.
; (In systemd <229, use `reload-or-try-restart` instead of `try-reload-or-restart`)
{% if step_cert_renewal_reload_services %}ExecStartPost=/usr/bin/env sh -c "systemctl try-reload-or-restart {{ step_cert_renewal_reload_services | join(' ') }}"{% endif %}

[Install]
WantedBy=multi-user.target
